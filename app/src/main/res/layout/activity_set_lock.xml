<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d2e5ec"
    tools:context=".Set_lock">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageButton
                    android:id="@+id/Read_Storage"
                    android:layout_width="155dp"
                    android:layout_height="140dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/btn_shape_mint"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/load"></ImageButton>

                <TextView
                    android:id="@+id/storage_tv"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="저장된\n 사진 불러오기"
                    android:textColor="@color/black"
                    android:fontFamily="@font/regular"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="160dp"
                    android:layout_height="140dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    tools:srcCompat="@tools:sample/avatars" />


            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="160dp"
                android:layout_height="145dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_shape_mint"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/first_security"
                    android:layout_marginTop="40dp"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"

                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/security_control"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:text="    1차 보안"
                        android:textColor="@color/black"
                        android:fontFamily="@font/regular"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:text="   잠김"
                        android:textColor="#c21bdb"
                        android:textSize="20sp"></TextView>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="160dp"
                android:layout_height="145dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_shape_mint"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/second_security"
                    android:layout_marginTop="40dp"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"

                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/security_control"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:text="    2차 보안"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/bold"
                        android:text="   잠김"
                        android:textColor="#c21bdb"
                        android:textSize="20sp"></TextView>

                </LinearLayout>

        </LinearLayout>



    </LinearLayout>
    </LinearLayout>
</LinearLayout>

