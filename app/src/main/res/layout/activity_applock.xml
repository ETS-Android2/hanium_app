<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a6d6e8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/etInputInfo"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center"
        android:background="#a6d6e8"
        android:layout_marginTop="35dp"
        android:text="비밀번호 입력"
        android:layout_marginBottom="70dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/regular"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#a6d6e8"
        android:orientation="vertical">

        <EditText
            android:id="@+id/text_pwd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#a6d6e8"
            android:gravity="center"
            android:textColor="@color/black"></EditText>
        q

        <ImageButton
            android:id="@+id/visible_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="95dp"
            android:background="#8dcde5"></ImageButton>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e7e7e7"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/set_pwd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/btn_ok"
            android:text="확인"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/light"></Button>

        <TableLayout
            android:id="@+id/tl_keys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:background="#e7e7e7"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:gravity="center"
                    android:onClick="onSingleClick"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:gravity="center"
                    android:onClick="onSingleClick"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:gravity="center"
                    android:onClick="onSingleClick"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:gravity="center"
                    android:onClick="onSingleClick"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:gravity="center"
                    android:onClick="onSingleClick"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:gravity="center"
                    android:onClick="onSingleClick"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:gravity="center"
                    android:onClick="onSingleClick"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:gravity="center"
                    android:onClick="onSingleClick"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:gravity="center"
                    android:onClick="onSingleClick"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:onClick="onSingleClick"
                    android:text="CLEAR"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:gravity="center"
                    android:onClick="onSingleClick"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/btnErase"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/btn_input_pw"
                    android:onClick="onSingleClick"
                    android:text="DEL"
                    android:textColor="@color/black" />
            </TableRow>
        </TableLayout>

    </LinearLayout>


</LinearLayout>