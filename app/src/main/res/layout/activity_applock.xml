<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/etInputInfo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="PassWord" />

    <LinearLayout
        android:id="@+id/II_passcodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etPasscode1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:inputType="textPassword|number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="40sp">

            <requestFocus/>
        </EditText>

        <EditText
            android:id="@+id/etPasscode2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:inputType="textPassword|number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="40sp"></EditText>

        <EditText
            android:id="@+id/etPasscode3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:inputType="textPassword|number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="40sp"></EditText>

        <EditText
            android:id="@+id/etPasscode4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:inputType="textPassword|number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="40sp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tl_keys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow>

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="18dp"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="18dp"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="3"
                    android:textSize="18dp"
                    android:onClick="onClick"/>
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="4"
                    android:textSize="18dp"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="5"
                    android:textSize="18dp"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="6"
                    android:textSize="18dp"
                    android:onClick="onClick"/>
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="7"
                    android:textSize="18dp"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="8"
                    android:textSize="18dp"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="9"
                    android:textSize="18dp"
                    android:onClick="onClick"/>
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:text="CLEAR"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="18dp"
                    android:onClick="onClick"/>

                <Button
                    android:id="@+id/btnErase"
                    android:layout_width="120dp"
                    android:layout_height="72dp"
                    android:layout_margin="5dp"
                    android:text="DEL"
                    android:onClick="onClick"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>